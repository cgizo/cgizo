import glob
import tifffile
import os
import numpy as np


# File and folder paths
dirpath = r"location of tiffs"
out_fp = r"output"

# Make search criteria for glob
search_criteria = "*.tif"
q = os.path.join(dirpath, search_criteria)

# List tiffs
tiff_lst = glob.glob(q)

for tiff in tiff_lst:
    tifffile.imsave('temp.tif', tiff, append=True)
    
    
import os
import tifftools

# File and folder paths
dirpath = r"location of tiffs"
out_fp = r"output"

# Make search criteria for glob
search_criteria = "*.tif"
q = os.path.join(dirpath, search_criteria)

# List tiffs
tiff_lst = glob.glob(q)

tiff_files_li=[]
for tiff in tiff_lst():
    tiff_files_li.append(tiff)

tifftools.tiff_concat(tiff_files_li, "output.tiff", overwrite=True)
