%navigate to folder with all the tif files
%name the file
%use Bioformats plugin to open this .tiff file in imageJ
%remember to add "saveastiff.m" to the path
%run the line 'saveastiff' with another folder as the current directory
warning('off')
filename='insert.tif';
foldernames={'insert'
}

parent_dir=cd;
imageData=[];
imageData=single(imageData);
n=0;
for f=1:size(foldernames,1)
    cd(foldernames{f})
    allfiles= dir('*.tif');
    for(i=1:size(allfiles,1))
        t = Tiff(allfiles(i).name);
        imageData(:,:,(n+i))=single(read(t));
        display(i)
    end
    n=n+i;
    cd(parent_dir)
end

path=('*'); %change
parts = strsplit(path, '\');
DirPart = parts{1};
cd([DirPart,'\'])
saveastiff(imageData,filename)
